<div class="container mt-6">
  <div class="row">
    <div class="col-12 text-center">
      <h3>Create A Tutorial</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <form id="create-tutorial">
        <div class="form-group">
          <label for="title">Title:</label>
          <input type="text" class="form-control" id="title" placeholder="Tutorial Title">
        </div>
        <div class="form-group">
          <label for="category">Tutorial Category</label>
          <select class="form-control" id="category">
            {{#each categories}}
              <option value="{{this.dataValues.id}}">{{this.dataValues.name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <textarea name="description" id="description" class="form-control" cols="30" rows="10"></textarea>
        </div>
        <div class="form-group">
          <label for="content">Tutorial Content</label>
          <textarea name="content" id="content" class="form-control" cols="30" rows="10"></textarea>
        </div>
        <div class="form-group text-right">
          <button type="sumbit" class="btn btn-primary">Create Tutorial</button>
        </div>
      </form>
    </div>
  </div>
</div>

