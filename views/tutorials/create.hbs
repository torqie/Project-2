<div class="container mt-6">
  <div class="row">
    <div class="col-12 text-center">
      <h3>Create A Tutorial</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <form id="create-tutorial">
        <div class="form-group">
          <label for="title">Title:</label>
          <input type="text" class="form-control" id="title" placeholder="Tutorial Title">
        </div>
        <div class="form-group">
          <label for="category">Tutorial Category</label>
          <select class="form-control" id="category">
            {{#each categories}}
              <option value="{{this.dataValues.id}}">{{this.dataValues.name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label for="description">Short Description:</label>
          <textarea name="description" id="description" class="form-control"  rows="5"></textarea>
        </div>
        <div class="form-group">
          <label for="content">Tutorial Content:</label>
          <textarea name="content" id="content" class="form-control" rows="10"></textarea>
        </div>
        <div class="form-group text-right">
          <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#tutorialCreated">Create Tutorial</button>
        </div>
        {{!-- pop-up creation confirm --}}
        <div class="modal" id="tutorialCreated">
          <div class="modal-dialog">
            <div class="modal-content">

              <div class="modal-header">
                <h4 class="modal-title">Congratulations!</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
              </div>

              <div class="modal-body">
                Your tutorial creation request has been sent in for review.
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Done</button>
              </div>
            </div>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>

